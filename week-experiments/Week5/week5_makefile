.PHONY: all install get-data process classify clean

all: install get-data process classify

install:
	pip install -r requirements.txt

get-data:
	python src/fetch_data.py --all --outdir "./data/raw"

process:
	python src/scrape_books.py

classify:
	python src/classify.py

clean:
	rm -rf data/raw/* data/processed/* logs/* __pycache__ .pytest_cache
